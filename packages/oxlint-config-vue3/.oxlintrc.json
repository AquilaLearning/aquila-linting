{
    "plugins": [
        "vue"
    ],
    "extends": [
        "plugin:vue/recommended"
    ],
    "rules": {
        "vue/html-indent": [
            "error",
            4
        ],
        "vue/enforce-style-attribute": [
            "error",
            {
                "allow": [
                    "module"
                ]
            }
        ],
        "vue/max-lines-per-block": [
            "error",
            {
                "script": 120,
                "template": 100,
                "style": 100,
                "skipBlankLines": true
            }
        ],
        "vue/no-multiple-template-root": "off",
        "vue/no-v-model-argument": "off"
    }
}
