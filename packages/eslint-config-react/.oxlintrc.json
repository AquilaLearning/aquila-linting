{
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    },
    "overrides": [
        {
            "files": [
                ".ts",
                ".tsx"
            ],
            "parser": "@babel/eslint-parser",
            "parserOptions": {
                "ecmaVersion": 10,
                "sourceType": "module",
                "ecmaFeatures": {
                    "jsx": true
                },
                "project": true
            }
        }
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}